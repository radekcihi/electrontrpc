{
  "name": "electron-prisma-template",
  "version": "1.0.0",
  "description": "Use tRPC and Prisma with Electron. Based on secure-electron-template.",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "db-seed": "prisma db seed",
    "db-push": "prisma db push --force-reset && npm run db-seed",
    "build": "tsc && node copy-files.js",
    "postinstall": "electron-builder install-app-deps",
    "audit-app": "npx electronegativity -i ./ -x LimitNavigationGlobalCheck,PermissionRequestHandlerGlobalCheck",
    "translate": "node ./app/localization/translateMissing.js",
    "dev": "npm run build && npm run debug",
    "debug": "cross-env NODE_ENV=development electron --inspect=5858 .",
    "prod-build": "cross-env NODE_ENV=production npm run build",
    "prod": "npm run prod-build && electron .",
    "pack": "electron-builder --dir --windows",
    "pack-linux": "electron-builder --dir --linux",
    "pack-mac": "electron-builder --dir --mac",
    "dist": "dotenv -- cross-env NODE_ENV=production npm run test && npm run prod-build && electron-builder",
    "dist-mac": "cross-env NODE_ENV=production npm run test && npm run prod-build && electron-builder --mac",
    "dist-linux": "cross-env NODE_ENV=production npm run test && npm run prod-build && electron-builder --linux",
    "publish": "dotenv -- electron-builder -p always",
    "test": "mocha"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "repository": "Your repo for holding releases",
  "keywords": [
    "electron",
    "security",
    "secure",
    "template",
    "javascript",
    "react",
    "redux",
    "webpack",
    "i18n",
    "boilerplate"
  ],
  "author": "Ayron Wohletz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/awohletz/electron-prisma-template/issues"
  },
  "homepage": "https://github.com/awohletz/electron-prisma-template#readme",
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@doyensec/electronegativity": "^1.9.1",
    "@google-cloud/translate": "^6.3.1",
    "@types/lodash": "^4.14.181",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^16.0.0",
    "electron": "^13.6.2",
    "electron-builder": "^22.14.5",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.2.1",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.5.2",
    "mocha": "^9.1.4",
    "path-browserify": "^1.0.1",
    "prisma": "^3.12.0",
    "replace-in-file": "^6.3.2",
    "spectron": "^15.0.0",
    "stream-browserify": "^3.0.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "@prisma/engines": "^3.13.0-9.a10084a836a379babc008c28b143dc1c7e644453",
    "@trpc/server": "^9.22.0",
    "electron-devtools-installer": "^3.2.0",
    "i18next": "^21.6.6",
    "i18next-electron-fs-backend": "^2.0.0",
    "i18next-fs-backend": "^1.1.4",
    "lodash": "4.17.21",
    "process": "^0.11.10",
    "secure-electron-context-menu": "^1.3.3",
    "secure-electron-license-keys": "^1.1.2",
    "secure-electron-store": "^3.0.3",
    "zod": "^3.14.4"
  }
}
